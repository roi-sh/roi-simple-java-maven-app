pipeline {
    agent {
        docker {
            image 'maven:3.9.2'
        }
    }

    environment {
        MAVEN_REPO = '/home/jenkins/.m2/repository'
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package -Dmaven.repo.local=${MAVEN_REPO}'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test -Dmaven.repo.local=${MAVEN_REPO}'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
